@page
@functions {
    public string DayName { get; set; }
    public void OnGet()
    {
        ViewData["Title"] = "Menu Builder Web Site";
        Model.DayName = DateTime.Now.ToString("dddd");
    }
}

<!-- kinda becomes like an angular view , because it is using the layout page to set the layout of the rest of the page. -->
<div class="jumbotron">
    <h1 class="display-3">Welcome to Northwind!</h1>
    <p class="lead">We supply products to our customers.</p>
    <hr />
    <p>
        It's @Model.DayName! Our customers include restaurants,
        hotels, and cruise lines.
    </p>
    <p>
        <a class="btn btn-primary" href="recipies">
            Start by viewing the meal types. 
        </a>
    </p>
</div>